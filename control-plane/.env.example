# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neustream
DB_USER=neustream_user
DB_PASSWORD=your-db-password

# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=your-super-secret-session-key-change-in-production

# JWT Secret (for Google OAuth tokens)
JWT_SECRET=your-jwt-secret-here

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://www.neustream.app

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.neustream.app/api/auth/google/callback

# Twitch OAuth Configuration
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
TWITCH_CALLBACK_URL=https://api.neustream.app/api/auth/twitch/callback

# PostHog Analytics Configuration
POSTHOG_API_KEY=your_posthog_project_api_key
POSTHOG_HOST=https://us.i.posthog.com

# Stream Domain
STREAM_DOMAIN=stream.neustream.app